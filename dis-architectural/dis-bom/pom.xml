		<geronimo-jta.spec.version>1.1.1</geronimo-jta.spec.version>
		
		<!-- JSON -->
		<json-simple.version>1.1.1</json-simple.version>
		
		<!-- Logging -->
		<slf4j.version>1.6.4</slf4j.version>
		<logback.version>1.0.0</logback.version>
		
